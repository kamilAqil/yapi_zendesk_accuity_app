{
  "framework": "mocha+chai",
  "src_files": [
    "lib/**/*.js",
    "spec/**/*.js"
  ],
  "serve_files": [
    "tmp/test_build.js",
    "node_modules/sinon/pkg/sinon.js",
    "node_modules/sinon-chai/lib/sinon-chai.js",
    "node_modules/chai-as-promised/lib/chai-as-promised.js",
    "spec/spec_helper.js",
    "spec/**/*_spec.js"
  ],
  "launch_in_dev": [
    "Chrome"
  ],
  "before_tests": "grunt test_build"
}
