{
  "env": {
    "browser": true,
    "commonjs": true,
    "mocha": true
  },
  "globals": {
    "expect": false,
    "sinon": false,
    "chai": false
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": 2,
        "SwitchCase": 1
      }
    ],
    "no-console": 0,
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
